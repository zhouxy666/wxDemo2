/* pages/index/index.wxss */
.container{
    width:750rpx;
}
.head{
    width:100%;
    height:80rpx;
    line-height: 80rpx;
    text-align: center;
    border-bottom:1px solid #ccc;
}
.head text{
    font-weight: bold;
    color: red;
}
.head icon{
    position:absolute;
    right:20rpx;
    top:18rpx;
}
.nav{
    width:100%;
    height:60rpx;
    line-height: 60rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-around;
}
.nav text{
    font-size:12px;
}
.text-hover{
    background-color: rgba(0.0.0.0.1);
    opacity: 0.7;
}

.banner{
    width:100%;
}
swiper{
    height:400rpx;
}
swiper-item image{
    width:100%;
}

.itemsGroup{
    width:100%;
    height:170rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    align-items: center;
    border-bottom:1px solid #ccc;
}
.itemsGroup .items{
    width:150rpx;
    height:150rpx;
    line-height: 150rpx;
    text-align: center;
    background:#ccc;
    border-radius:50%;
}
.content{
    border:1px solid royalblue;
}
.footer{
    height:90rpx;
    width:100%;
    background:#ccc;
    position: fixed;
    bottom:0px;
}