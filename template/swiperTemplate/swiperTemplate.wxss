.content{
    margin-top:20rpx;
    background: #fff;
    display: flex;
    flex-direction: column;
    padding:24rpx;
    border-radius:10rpx;
}
.content-head{
    display: flex;
    flex-direction: row;
    font-size:12px;
}
.content-head image{
    width:60rpx;
    height:60rpx;
    border-radius:50%;
    margin-right:10rpx;
}
.content-head text{
    vertical-align: middle;
    line-height:60rpx;
    color:#666;
}
.content-head .author{
    margin-right:10rpx;
}
.content-body{
    margin-top:20rpx;
}
.content-body image{
    width:100%;
    margin-top:10rpx;
}
.content-body .content-body-title{
    font-weight: bold;
}
.content-body .content-body-article{
    color:#666;
    font-size: 12px;
    /*height:162rpx;*/
    height: 81px;
    line-height:16px;
    text-align: justify;
    letter-spacing: 1px;
    /*white-space:nowrap;
    text-overflow:ellipsis;*/
    overflow: hidden;
}
.content-line{
    width:100%;
    height:1rpx;
    background: rgba(0, 0, 0, .3);
    margin-top:20rpx;
    transform: scaleY(.3);
}
.content-like{
    margin-top:20rpx;
    display: flex;
    flex-direction: row;
    justify-content: flex-end;
}
.content-like .content-like-image{
   width:32rpx;
   height:32rpx;
   vertical-align: middle;
   margin-right:5rpx;
}
.content-like .content-like-num{
    vertical-align: middle;
    font-size:12px;
    margin-right: 10rpx;
    margin-top:2rpx;
}